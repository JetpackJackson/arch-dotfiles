rsync -a --delete .config/nvim/ $PROJECTS/git/newdots/nvim/
rsync -a --delete .config/newsboat/ $PROJECTS/git/newdots/newsboat/
rsync -a --delete .config/paru/ $PROJECTS/git/newdots/paru/
rsync -a --delete .config/swappy/ $PROJECTS/git/newdots/swappy/
rsync -a --delete .config/sway/ $PROJECTS/git/newdots/sway/
rsync -a --delete .config/waybar/ $PROJECTS/git/newdots/waybar/
rsync -a --delete .config/whoozle.github.io/ $PROJECTS/git/newdots/whoozle.github.io/
rsync -a --delete .config/zathura/ $PROJECTS/git/newdots/zathura/
rsync -a --delete /etc/pacman.conf $PROJECTS/git/newdots/etc/pacman.conf
